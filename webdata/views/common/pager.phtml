<div class="pagination">
    <ul class="pagination">
        <?php if ($this->page > 1) { ?>
        <li><a href="<?= $this->pagerBaseUri ?><?= urlencode($this->search_word) ?>?page=<?= $this->page - 1 ?>">&laquo;</a></li>
        <?php } else { ?>
        <li class="disabled"><a href="#">&laquo;</a></li>
        <?php } ?>
        <?php $start = max(1, $this->page - 2); ?>
        <?php for ($i = $start; $i < min($this->max_page + 1, $start + 5); $i ++) { ?>
        <li<?= $i == $this->page ? ' class="active"' : '' ?>><a href="<?= $this->pagerBaseUri ?><?= urlencode($this->search_word) ?>?page=<?= $i ?>"> <?= $i ?> </a></li>
        <?php } ?>
        <?php if ($this->page < $this->max_page) { ?>
        <li><a href="<?= $this->pagerBaseUri ?><?= urlencode($this->search_word) ?>?page=<?= $this->page + 1 ?>">&raquo;</a></li>
        <?php } else { ?>
        <li class="disabled"><a href="#">&raquo;</a></li>
        <?php } ?>
    </ul>
</div>
